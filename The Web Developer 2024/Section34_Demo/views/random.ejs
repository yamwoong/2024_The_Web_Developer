<%- include('partials/head') %>

    <body>
        <%- include('partials/navbar') %>
            <h1>
                Your random number is : <%= num %>
            </h1>
            <% if(num % 2===0){ %>
                <h2>That is an even number!</h2>
                <% } else { %>
                    <h2>That is an odd number!</h2>
                    <% } %>
                        <h3>
                            <%= num % 2===0 ? 'EVEN' : 'ODD' %>
                        </h3>
    </body>

    </html>